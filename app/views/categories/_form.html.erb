<%= form_for @category do |f| %>
    <div class='form-group'>
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %><br>
	</div>
	
	<div class='form-group'>
		<%= f.submit 'Зберегти', class: 'btn btn-primary' %>
				<%= link_to 'Назад', :back, class: 'btn btn-secondary'%> 

	</div>

<% end %>