<div class="nan">
<%= form_for @movie, html: { multipart: true }  do |f| %>
 
	<div class='form-group'>
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %><br>
	</div>
	
	<div class='form-group'>
		<%= f.label :description %>
		<%= f.text_area :description, class: 'form-control' %><br>
	</div>

	<div class='form-group'>
		<%= f.file_field :image %><br>
	</div>

	<div class='form-group'>
		<%= f.label :category_id %>
		<%# <%= f.collection_select :category_id, Category.all, :id, :name, { include_blank: true }, class: 'form-control'  %><br> %>
		<%= f.collection_select :category_id, Category.order(:name), :id, :name, { include_blank: true }, class: 'form-control'  %><br>
	</div>

	<div class='form-group'>
		<%= f.submit 'Зберегти', class: 'btn btn-primary' %>
		<%= link_to 'Назад', :back, class: 'btn btn-outline-secondary'%> 
	</div>
<% end %>

</div>
