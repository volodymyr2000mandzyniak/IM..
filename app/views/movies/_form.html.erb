<div class="card">
  <div class="card-body">
<%= form_for @movie, html: { multipart: true }  do |f| %>
 
	<div class='form-group'>
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>
	
	<div class='form-group'>
		<%= f.label :description %>
		<%= f.text_area :description, class: 'form-control' %>
	</div>

	<div class='form-group'>
		<%= f.file_field :image %>
	</div>

	<div class='form-group'>
		<%= f.submit 'Зберегти', class: 'btn btn-primary' %>
		<%= link_to 'Назад', :back, class: 'btn btn-outline-secondary'%> 
	</div>
<% end %>

</div>
</div